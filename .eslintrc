{
  "extends": [
    "plugin:react/recommended",
    "prettier",
    "prettier/react",
    "prettier/standard",
  ],

  "env": {
    "es6": true,
    "browser": true,
    "jest": true
  },

  "plugins": [
    // ...
    "react-hooks"
  ],

  "parser": "babel-eslint",

  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "react/display-name": "off",
    "react-hooks/rules-of-hooks": "error"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src/"]
      }
    }

  }
}
