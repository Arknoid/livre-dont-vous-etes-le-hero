{
  "extends": [
    "plugin:react/recommended",
    "prettier",
    "prettier/react",
    "prettier/standard"
  ],

  "env": {
    "es6": true,
    "browser": true,
    "jest": true
  },

  "parser": "babel-eslint",

  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src/"]
      }
    }

  }
}
